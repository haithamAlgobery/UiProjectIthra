{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/research/[id]/attachments/page.tsx", "app/auth/login/page.jsx", "src/hooks/useAuth.jsx", "app/auth/register/page.jsx", "app/content/[id]/page.tsx", "app/user/[username]/page.tsx", "app/auth/start/page.jsx"],
  "exclude": ["node_modules"]
}
